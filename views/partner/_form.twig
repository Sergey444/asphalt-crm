{{ use('yii/bootstrap4/ActiveForm') }}

<div class="зфкетук-form">

    {% set form = active_form_begin() %}

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'name').textInput({'placeholder': 'Введите название', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
             {{ form.field(model, 'phone').widget('yii\\widgets\\MaskedInput', {'mask': '+7 (999) 999-99-99'}).textInput({'placeholder': 'Введите телефон', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'email').textInput({'placeholder': 'Введите email', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'site').textInput({'placeholder': 'Введите сайт', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'contact_name').textInput({'placeholder': 'Введите Ф.И.О. контакта', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'director_name').textInput({'placeholder': 'Введите Ф.И.О. директора', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'inn').textInput({'placeholder': 'Введите ИНН', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'kpp').textInput({'placeholder': 'Введите КПП', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'account_number').textInput({'placeholder': 'Введите номер р/счёта', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'address').textInput({'placeholder': 'Введите адрес', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'legal_address').textInput({'placeholder': 'Введите юридический адрес', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'comment').textarea({'placeholder': 'Комментарий', 'rows':'1', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
    </div>

     <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-success btn-sm d-block " />
    </div>

    {{ active_form_end() }} 

</div>


