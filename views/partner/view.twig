{{ use('yii/widgets/DetailView') }}

{{ set(this, 'title', 'Просмотр партнёра') }}
{{ set(this, 'params', { 'breadcrumbs' : [{ 'label' : 'Партнёры', 'url': '/partner' }, {'label' : this.title }] }) }}

<div class="partner-view">

    <div class="bg-white mb-4">
        <p>
            {{ html.a('Редактировать', path('update', {'id': model.id}), {
                class: 'btn btn-outline-primary mr-2'
            }) | raw }}
            {{ html.a('Удалить', path('delete', {'id': model.id}), {
                class: 'btn btn-outline-danger',
                data: {
                    confirm: 'Вы уверены что хотите удалить данную запись?',
                    method: 'post'
                }
            }) | raw }}
        </p>
    </div>

    <div class="bg-white">

        {{ detail_view_widget({
                'model': model,
                'options': {
                    'class': 'table table-sm table-bordered' 
                },
                'attributes': [
                    'id',
                    'name',
                    'phone',
                    'email:email',
                    'director_name',
                    'contact_name',
                    'site',
                    'inn',
                    'kpp',
                    'account_number',
                    'address',
                    'legal_address',
                    'comment:ntext',
                    'created_by',
                    'updated_by',
                    {'attribute': 'created_at', 'format': ['date', 'php:d.m.Y H:i:s']},
                    {'attribute': 'updated_at', 'format': ['date', 'php:d.m.Y H:i:s']},
                ],
            }) 
        }}

    </div>
</div>









