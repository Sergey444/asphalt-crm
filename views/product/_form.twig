/* @var $form yii\widgets\ActiveForm */
#}

{{ use('yii/bootstrap4/ActiveForm') }}

<div class="product-form">

    {% set form = active_form_begin() %}

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'name').textInput({'placeholder': 'Введите название товара', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'price').textInput({'placeholder': 'Цена за единицу (рублей)', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'count').textInput({'placeholder': 'Количество', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'unit').dropDownList([
                'т.',
                'шт.',
                'л.',
                'у.е.'
            ], {
                'prompt': 'Выберите единицу измерения', 
                'class': 'custom-select custom-select-sm'
             }) | raw }}
        </div>
        <div class="col-md-8">
             {{ form.field(model, 'description').textarea({'placeholder': 'Описание', 'rows':'1', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
    </div>

    <div class="form-group">
        {{ form.field(model, 'is_total_amount').checkbox({'value': '1', 'class': 'custom-control-input'}) | raw }}
    </div>

     <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-success btn-sm d-block " />
    </div>

    {{ active_form_end() }} 

</div>
