{{ use('yii/grid/GridView') }}
{{ use('yii/widgets/Pjax') }}

{{ set(this, 'title', 'Товары') }}
{{ set(this, 'params', { 'breadcrumbs' : { '' : this.title } }) }}

<div class="order-index">

    {{ pjax_begin() }}

        <div class="bg-white mb-4">
            <div class="row">
                <div class="col-md-8"> 
                    <button class="btn btn-outline-success d-none d-md-block" data-toggle="modal" data-target="#createProduct">Добавить товар</button>
                </div>
                <div class="col-md-4"> 
                    {{ this.render('_search.twig', {model: searchModel}) | raw}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <a href="/order/create" class="btn btn-outline-success d-md-none w-100" >Добавить товар</a>
                </div>
            </div>
        </div>

        <div class="bg-white">

            {{ grid_view_widget({
                    'dataProvider': dataProvider,
                    'options': {
                        'class': 'table-responsive'
                    },
                    'tableOptions': {
                        'class': 'table table-sm table-striped table-bordered' 
                    },
                    'columns': [
                        {'class': 'yii\\grid\\SerialColumn'},
                        'name',
                        {'attribute': 'price', 'format': ['currency', 'RUB'] },
                        'count',
                        'total',
                        'truncateDescription',
                        {
                            'class': 'yii\\grid\\ActionColumn',
                            'header': '',
                            'template': '{view} {update} {delete}'
                        },
                    ]
                })
            }}

        </div>

    {{ pjax_end() }}

</div>


<!-- Modal -->
<div class="modal fade" id="createProduct" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Добавить товар</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
             {{ this.render('_form.twig', {model: model}) | raw}}
        </div>
    </div>

  </div>
</div>
