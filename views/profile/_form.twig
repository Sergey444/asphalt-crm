{{ use('yii/bootstrap4/ActiveForm') }}
{{ use('yii/widgets/MaskedInput') }}

<div class="personal-form">

    {% set form = active_form_begin() %}

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'email', {'enableAjaxValidation': 'true'}).textInput({'placeholder': 'Введите email', 'class':'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
             {{ form.field(model, 'password').passwordInput({'placeholder': 'Введите пароль', 'class':'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'password_repeat').passwordInput({'placeholder': 'Введите пароль ещё раз', 'class':'form-control form-control-sm'}) | raw }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'surname').textInput({'placeholder': 'Введите фамилию', 'class':'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'name').textInput({'placeholder': 'Введите имя', 'class':'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'secondname').textInput({'placeholder': 'Введите отчество', 'class':'form-control form-control-sm'}) | raw }}
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'date_of_birthday').widget('yii\\widgets\\MaskedInput', {'mask': '99.99.9999'}).textInput({'placeholder': 'Введите дату рождения', 'class':'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'phone').widget('yii\\widgets\\MaskedInput', {'mask': '+7 (999) 999-99-99'}).textInput({'placeholder': 'Введите телефон', 'class':'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'position').textInput({'placeholder': 'Введите должность', 'class':'form-control form-control-sm'}) | raw }}
        </div>
    </div>

     <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-success btn-sm d-block " />
    </div>

    {{ active_form_end() }}

</div>
