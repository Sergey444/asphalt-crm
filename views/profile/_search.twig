{{ use('yii/bootstrap4/ActiveForm') }}

<div class="personal-search">

    {% set form = active_form_begin({
        'action': 'users',
        'method': 'get',
        'options': {
            'data-pjax': 1
        }
    }) %}

    <div class="row">
        <div class="col-8">
            {{ form.field(model, 'name').textInput({'placeholder': 'Поиск'}).label(false) | raw }}
        </div>
        <div class="col-4" >
              <div class="form-group">
                <input type="submit" value="Найти" class="btn btn-outline-primary d-block w-100" />
            </div>
        </div>
    </div>

    {{ active_form_end() }}

</div>
