{{ use('yii/bootstrap4/ActiveForm') }}

<div class="supplier-form">

    {% set form = active_form_begin() %}

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'date').widget('yii\\jui\\DatePicker', {
                                                    'options':{
                                                        'class':'form-control form-control-sm',
                                                    },
                                                    'clientOptions':{
                                                        'minDate':'',
                                                        'maxDate':''
                                                    },
                                                    'language': 'ru',
                                                    'dateFormat':'php:d.m.Y',
                                                }).widget('yii\\widgets\\MaskedInput', {
                                                    'mask': '99.99.9999'
                                                }).textInput({
                                                    'placeholder': 'Выберите дату',
                                                    'value': app.formatter.asDate(model.date, 'php:d.m.Y')
                                                }) | raw}}
        </div>
        <div class="col-md-4">
             {{ form.field(model, 'partner_id').dropDownList(model.partners, {
                 'prompt': 'Выберите партнёра',
                 'class': 'form-control form-control-sm'
             }) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'product_id').dropDownList(model.products, {
                 'prompt': 'Выберите товар',
                 'class': 'form-control form-control-sm'
             }) | raw }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'count').textInput({'placeholder': 'Введите количество (тонн)', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'price').textInput({'placeholder': 'Введите цена за единицу (рублей)', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'sum').textInput({'placeholder': 'Введите сумму', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'bill').textInput({'placeholder': 'Введите номер счёта', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'payment').dropDownList(['Наличные', 'Безналичные', 'Взаимозачёт'], {
                 'prompt': 'Выберите тип оплаты',
                 'class': 'form-control form-control-sm'
            }) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'comment').textarea({'placeholder': 'Комментарий', 'rows':'1', 'class': 'form-control form-control-sm'}) | raw }}
        </div>
    </div>

     <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-success btn-sm d-block " />
    </div>

    {{ active_form_end() }} 

</div>
