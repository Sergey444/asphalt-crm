{{ use('yii/bootstrap4/ActiveForm') }}

<div class="supplier-form">

    {% set form = active_form_begin() %}

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'date').widget('yii\\jui\\DatePicker', {
                                                    'options':{
                                                        'class':'form-control',
                                                    },
                                                    'clientOptions':{
                                                        'minDate':'',
                                                        'maxDate':''
                                                    },
                                                    'language': 'ru',
                                                    'dateFormat':'php:d.m.Y',
                                                }).widget('yii\\widgets\\MaskedInput', {
                                                    'mask': '99.99.9999'
                                                }).textInput() | raw}}
        </div>
        <div class="col-md-4">
             {{ form.field(model, 'partner_id').dropDownList(model.partners, {
                 'prompt': 'Выберите партнёра'
             }) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'product_id').dropDownList(model.products, {
                 'prompt': 'Выберите товар'
             }) | raw }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'count').textInput({'placeholder': 'Количество (тонн)'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'price').textInput({'placeholder': 'Цена за единицу (рублей)'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'sum').textInput({'placeholder': 'Сумма'}) | raw }}
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            {{ form.field(model, 'bill').textInput({'placeholder': 'Номер счёта'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'payment').textInput({'placeholder': 'Тип оплаты'}) | raw }}
        </div>
        <div class="col-md-4">
            {{ form.field(model, 'comment').textarea({'placeholder': 'Комментарий', 'rows':'1'}) | raw }}
        </div>
    </div>

     <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-success d-block " />
    </div>

    {{ active_form_end() }} 

</div>
