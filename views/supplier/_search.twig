{{ use('yii/bootstrap4/ActiveForm') }}

<div class="supplier-search">

    {% set form = active_form_begin({
        'action': '/supplier',
        'method': 'get',
        'options': {
            'data-pjax': 1
        }
    }) %}

    <div class="row">
        <div class="col-6">
            {{ form.field(model, 'search').textInput({'placeholder': 'Поиск', 'class': 'form-control form-control-sm'}).label(false) | raw }}
        </div>
        <div class="col-6" >
              <div class="form-group">
                <input type="submit" value="Найти" class="btn btn-outline-primary btn-sm d-block w-100" />
            </div>
        </div>
    </div>

    {{ active_form_end() }}

</div>
