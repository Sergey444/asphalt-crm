{# 
/* @var $this yii\web\View */
/* @var $searchModel app\models\SupplierSearch */
/* @var $dataProvider yii\data\ActiveDataProvider */ 
#}

{{ use('yii/grid/GridView') }}
{{ use('yii/widgets/Pjax') }}

{{ set(this, 'title', 'Поставщики') }}
{{ set(this, 'params', { 'breadcrumbs' : { '' : this.title } }) }}

<div class="supplier-index">

    {{ pjax_begin() }}

        <div class="bg-white mb-4">
            <div class="row">
                <div class="col-md-6 col-lg-8"> 
                    <div class="row">
                        <div class="col-md-6 col-lg-8">
                            {% if model.products and model.partners %}
                                <button class="btn btn-outline-success btn-sm d-none d-md-block" data-toggle="modal" data-target="#createSupplier">Добавить поставщика</button>
                            {% else %}
                                <div class="alert alert-primary" role="alert">
                                    Для добавления поставщика необходимо создать {{ model.partners ? 'товары' : model.products ? 'партнёров' : 'товары и партнёров' }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                {{html.beginForm(
                                    ['/supplier'],
                                    'post',
                                    {'data-pjax': 1}
                                    ) | raw}}

                                    {{ html.dropDownList('current', 
                                        app.request.post('current') ?: app.request.cookies.get('current-sup-list').value , {
                                        'all': 'за всё время',
                                        'year': 'текущий год',
                                        'month': 'текущий месяц',
                                    }, {
                                        'class': 'form-control form-control-sm',
                                        'onchange': 'this.form.changeCurrent.click()'
                                    }) | raw}}
                                    <input type="submit" class="d-none" id="changeCurrent" value="onghfdbnm">
                                {{html.endForm() | raw}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4"> 
                    {{ this.render('_search.twig', {model: searchModel}) | raw}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {% if model.products and model.partners %}
                        <a href="/supplier/create" class="btn btn-sm btn-outline-success d-md-none w-100" >Добавить поставщика</a>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="bg-white">

            {{ grid_view_widget({
                    'dataProvider': dataProvider,
                    'options': {
                        'class': 'table-responsive'
                    },
                    'tableOptions': {
                        'class': 'table table-sm table-striped table-bordered' 
                    },
                    'columns': [
                        {'class': 'yii\\grid\\SerialColumn'},
                        
                        {'attribute': 'date', 'format': ['date', 'php:d.m.Y']},
                        'partner.name',
                        'product.name',
                        'bill',
                        {'attribute': 'count', 'format': ['integer']},
                        {'attribute': 'price', 'format': ['currency']},
                        {'attribute': 'sum', 'format': ['currency']},
                        'payment',
                        {
                            'class': 'yii\\grid\\ActionColumn',
                            'header': '',
                            'template': '{view} {update} {delete}'
                        },
                    ]
                })
            }}

        </div>

    {{ pjax_end() }}

</div>


<!-- Modal -->
<div class="modal fade" id="createSupplier" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Добавить поставщика</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
             {{ this.render('_form.twig', {model: model}) | raw}}
        </div>
    </div>

  </div>
</div>